<% if book.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
  <%=link_to book_favorites_path(book.id), method: :delete, remote: true do %>
    <i class="far fa-heart like-btn" ><%= book.favorites.count %></i>
  <% end %>
<% else %>
  <%=link_to book_favorites_path(book.id), method: :post, remote: true do %>
    <i class="far fa-heart unlike-btn" ><%= book.favorites.count %></i>
  <% end %>
<% end %>