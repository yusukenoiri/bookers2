<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <p class="text-success"><%= flash[:notice] %></p>
      <%= render 'books/list', user: @user, book: @book %>
      <%= render 'books/userinfo', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1"><!--ここから右側のUser info-->
      <h1 class="index-head">Book detail</h1>
      <table class="table table-hover table-inverse">
        <thead>
        </thead>
        <tbody>
          <%# @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@book.id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg"  %>
              <% end %>
              <!--do とendで1セット。間に記載した-->
              <br><span><%= link_to "#{@user.name}", user_path(@user.id) %></span>
            </td>
            <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
            <td><%= @book.body %></td>
              <!--book.id or bookでidをとってくる-->
            <td class="4">
              <% if @book.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
                  <span class="far fa-heart like-btn" ><%= @book.favorites.count %></span>
              <% else %>
                  <span class="far fa-heart unlike-btn" ><%= @book.favorites.count %></span>
              <% end %>
            </td>

            <td class="5">
              <p>コメント件数：<%= @book.book_comments.count %></p>
            </td>

            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <!--idを持った変数を引数に渡すことで、正しいパスとなる-->
            <td><%= link_to "Destroy", book_path(@book.id),method: :delete, data: { confirm: 'Are you sure?' }%></td>
              <!--methodをdestroyに変更することで削除でき、一覧画面に戻るpathとなる-->
              <!--destroyアクションを使用して削除機能を実装しているが、使用するHTTPメソッドはdelete-->
            <% end %>
          </tr>
        </tbody>
      </table>
      <table>
        <% @book.book_comments.each do |book_comment| %>
        <%#= render 'layouts/errors', obj: @book.book_comments %>
        <tr>
          <div class="comments">
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg"  %>
          </td>
          <td>
            <%= book_comment.user.name %>
             <!--attachment_image_tag 保存先インスタンス名, :保存先カラム名, :サイズ（横幅,高さ）, 画像拡張子, 代替画像-->
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
            <!--削除を表示-->
          <td>
           <% if book_comment.user == current_user %>
            <div class="comment-delete">
               <%=link_to "Destroy",book_book_comment_path(book_comment.book, book_comment), method: :delete ,class: 'btn btn-danger' %>
              <!--book_commentからbookを特定する、book_comment.idもわたす。2つIDが必要-->
              <% end %>
            </div>
          </td>
        </div>
        </tr>
        <% end %>
      </table>

      <div class="col-md-8", "new-comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <div class='commentarea'>
         <%= f.text_area :comment, rows:'5', cols:'90px', placeholder: "" %>
        </div>
          <br><%= f.submit "送信" ,class: 'btn btn-success'%>
        <% end %>
      </div>
    </div>
  </div>
</div>