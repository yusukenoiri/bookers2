<%# chats.each do |chat| %>
  <% if chat.user_id == current_user.id %>
      <tr id = "chat_<%= chat.id %>">
        <td></td>
        <td style="text-align: left;">
          <p>User : <%= chat.user.name %></p>
          <p>Time : <%= chat.created_at.to_s(:datetime_jp) %></p>
          <p><%= chat.message %></p>
        </td>
        <td>
          <div class="comment-delete">
             <%=link_to "削除",chat_path(chat), method: :delete, remote: true ,class: 'btn btn-danger', data: { confirm: 'Are you sure?' }%>
          </div>
        </td>
      </tr>
  <% else %>
      <tr>
        <td style="text-align: left;">
          <p>User : <%= chat.user.name %></p>
          <p>Time : <%= chat.created_at.to_s(:datetime_jp) %></p>
          <%#= インスタンス変数.created_at.strftime('%Y/%m/%d') %>
          <p><%= chat.message %></p>
        </td>
        <td></td>
      </tr>
  <% end %>
<%# end %>