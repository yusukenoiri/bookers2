<div class="col-md-8 offset-md-1">
<%= render 'searchs/search' %>
</div>

<% if @range == '1' %>
  <h2>Users search for "<%= @word %>"</h2>
  <table class="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Introduction</th>
        </tr>
      </thead>
      <tbody>
        <% @user.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
          </td>
          <td><%= link_to user_path(user) do %>
              <%= user.name %> <% end %>
          </td>
          <td><%= user.introduction %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
<% else %>

 <h2>Books search for "<%= @word %>"</h2>
 <!--"#{user.followers.count}"-->
 <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

     <tbody>
      <% @book.each do |book| %>
      <tr>
        <td>
            <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon-small.jpeg") %>
        </td>
        <td><%= link_to book_path(book) do %>
            <%= book.title %> <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

 </table>

 <% end %>